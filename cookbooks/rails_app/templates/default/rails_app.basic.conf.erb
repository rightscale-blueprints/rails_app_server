<VirtualHost *:80>
  DocumentRoot <%= @params[:extra][:document_root] %>

  RailsBaseURI /
  RailsEnv production

  PassengerMaxPoolSize 4

  <Directory <%= @params[:extra][:document_root] %>>
    AllowOverride None
    Order allow,deny
    Allow from all
    Options +MultiViews
  </Directory>

</VirtualHost>